@using CourseManagementSystem.Data

@{
    ViewData["Title"] = "Dashboard - Admin";
}

<div class="dashboard-container">
    <div class="sidebar">
        <ul class="sidebar-menu">
            <li class="sidebar-menu-item active">
                <a href="#">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="sidebar-menu-item">
                <a href='@Url.Action("Login", "Account")' target="_blank">
                    <i class="fas fa-users"></i>
                    <span>Login</span>
                </a>
            </li>

            <li class="sidebar-menu-item">
                <a href='@Url.Action("Index", "Student")' target="_blank">
                    <i class="fas fa-users"></i>
                    <span>Etudiants</span>
                </a>
            </li>
            <li class="sidebar-menu-item">
                <a href='@Url.Action("Index", "Course")' target="_blank">
                    <i class="fas fa-users"></i>
                    <span>Filieres</span>
                </a>
            </li>
            <li class="sidebar-menu-item">
                <a href='@Url.Action("Index", "Enrollment")' target="_blank">
                    <i class="fas fa-users"></i>
                    <span>Inscriptions</span>
                </a>
            </li>

             <li class="sidebar-menu-item">
                <a href='@Url.Action("Register", "Account")' target="_blank">
                    <i class="fas fa-cog"></i>
                    <span>Register</span>
                </a>
            </li>
            @*<li class="sidebar-menu-item">
                <a href="#">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </li> *@
        </ul>
    </div>
    <div class="main-content">
        <div class="header">
            <h2>Bienvenue - Tableau de bord de l'admin</h2>
            <p>N'hésitez pas à explorer le site et à y naviguer.</p>
        </div>
        <div class="cards-container">
            <div class="card">
                <div class="card-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="card-info">
                    <h3>Etudiants</h3>
                    <p>1000</p> <!-- afficher nombre d'etudiants ici-->
                </div>
            </div>
            <div class="card">
                <div class="card-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <div class="card-info">
                    <h3>Filieres</h3> <!-- afficher nombre de filieres ici-->
                    <p>500</p>
                </div>
            </div>
            <div class="card">
                <div class="card-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="card-info">
                    <h3>Inscriptions</h3> <!-- afficher nombre d'inscriptions ici-->
                    <p>100</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        margin: 0;
    }

    .dashboard-container {
        display: flex;
        height: 100vh;
    }

    .sidebar {
        background-color: #222;
        color: #fff;
        width: 200px;
        height: 100%;
        padding: 20px;
    }

    .sidebar-menu {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .sidebar-menu-item {
        margin-bottom: 10px;
    }

    .sidebar-menu-item.active a {
        color: #fff;
        font-weight: bold;
    }

    .sidebar-menu-item a {
        color: #ccc;
        display: block;
        padding: 10px;
        text-decoration: none;
    }

    .sidebar-menu-item a:hover {
        color: #fff;
    }

    .sidebar-menu-item i {
        margin-right: 10px;
    }

    .main-content {
        background-color: #f5f5f5;
        flex-grow: 1;
        padding: 20px;
    }

    .header {
        margin-bottom: 20px;
    }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
    }

    .card {
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        margin-right: 20px;
        margin-bottom: 20px;
        padding: 20px;
        width: calc(33.33% - 20px);
    }

    .card:last-child {
        margin-right: 0;
    }

    .card-icon {
        font-size: 40px;
        margin-bottom: 10px;
    }

    .card-info h3 {
        font-size: 24px;
        margin-bottom: 5px;
    }

    .card-info p {
        font-size: 18px;
        margin-bottom: 0;
    }
</style>