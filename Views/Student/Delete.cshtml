@model StudentManagement.Models.Student

<h2>Supprimer Étudiant</h2>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <p>Êtes-vous sûr de vouloir supprimer cet étudiant ?</p>
        <p><strong>@Model.FirstName @Model.LastName</strong></p>
    </div>
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
