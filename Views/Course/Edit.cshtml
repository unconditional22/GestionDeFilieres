@model CourseManagement.Models.Course

<div style="max-width: 960px; margin: 0 auto;">
    <h2 style="margin-bottom: 20px;">Modifier Filières</h2>

    <form asp-action="Edit" asp-route-id="@Model.Id">
        <div class="form-group">
            <label asp-for="Title" style="margin-bottom: 5px;">Titre : </label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" style="margin-bottom: 5px;">Description : </label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StatusC" style="margin-bottom: 5px;">Status Filière :</label>
            <input asp-for="StatusC" class="form-control" />
            <span asp-validation-for="StatusC" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Sauvegarder</button>
    </form>
</div>