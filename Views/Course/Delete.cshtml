@model CourseManagement.Models.Course

<h2>Supprimer Filière</h2>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <p>Êtes-vous sûr de vouloir supprimer cette filière?</p>
        <p><strong>@Model.Title</strong></p>
    </div>
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
