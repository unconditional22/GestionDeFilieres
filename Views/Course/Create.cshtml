@model CourseManagement.Models.Course

<h2>Creer Filière</h2>

<p>
    <a href="@Url.Action("Index")">Retour a la liste</a>
</p>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Title">Titre</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StatusC">Status Filière</label>
        <input asp-for="StatusC" class="form-control" />
        <span asp-validation-for="StatusC" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Creer</button>
</form>
