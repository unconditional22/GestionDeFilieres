@model IEnumerable<CourseManagement.Models.Course>

<div style="max-width: 960px; margin: 0 auto; background-color: #fff; padding: 20px;">
    <h2 style="margin-bottom: 20px;">Filières - Index</h2>

    <div style="margin-bottom: 20px;">
        <a href="@Url.Action("Create")" style="background-color: #007bff; border-color: #007bff; color: #fff; padding: 10px 20px; border-radius: 4px; text-decoration: none;">Creer Nouvelle Filière</a>
    </div>

    <table style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr>
                <th style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayNameFor(model => model.Title)</th>
                <th style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayNameFor(model => model.Description)</th>
                <th style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayNameFor(model => model.StatusC)</th>
                <th style="padding: 10px; border: 1px solid #dee2e6;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayFor(modelItem => item.Title)</td>
                    <td style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayFor(modelItem => item.Description)</td>
                    <td style="padding: 10px; border: 1px solid #dee2e6;">@Html.DisplayFor(modelItem => item.StatusC)</td>
                    <td style="padding: 10px; border: 1px solid #dee2e6;">
                        <a href="@Url.Action("Edit", new { id = item.Id })" style="background-color: #ffc107; border-color: #ffc107; color: #fff; padding: 5px 10px; border-radius: 4px; text-decoration: none; margin-right: 10px;">Modifier</a>
                        <a href="@Url.Action("Details", new { id = item.Id })" style="background-color: #17a2b8; border-color: #17a2b8; color: #fff; padding: 5px 10px; border-radius: 4px; text-decoration: none; margin-right: 10px;">Détails</a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" style="background-color: #dc3545; border-color: #dc3545; color: #fff; padding: 5px 10px; border-radius: 4px; text-decoration: none;">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>